name: Build LaTeX

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2

    - name: Set up LaTeX
      uses: docker://blang/latex:ubuntu

    - name: Build LaTeX
      run: |
        pdflatex -interaction=nonstopmode -halt-on-error main.tex
        bibtex main
        pdflatex -interaction=nonstopmode -halt-on-error main.tex
        pdflatex -interaction=nonstopmode -halt-on-error main.tex

    - name: Upload PDF
      uses: actions/upload-artifact@v2
      with:
        name: paper
        path: main.pdf