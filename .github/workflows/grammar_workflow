name: Build and Check LaTeX

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2

    - name: Set up LaTeX
      uses: docker://blang/latex:ubuntu

    - name: Build LaTeX
      run: |
        pdflatex -interaction=nonstopmode -halt-on-error main.tex
        bibtex main
        pdflatex -interaction=nonstopmode -halt-on-error main.tex
        pdflatex -interaction=nonstopmode -halt-on-error main.tex

    - name: Check Grammar
      uses: docker://languagetool/standalone
      with:
        args: -l en-US -c /config/languagetool.cfg -d /config/en-US